<Window
    x:Class="Cerosoft.AirPoint.Server.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#000000">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.RowSpan="3" Width="400" Height="400" CornerRadius="200" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-200,-200,0" 
                Opacity="0.15" IsHitTestVisible="False">
            <Border.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#00E676" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Border.Background>
        </Border>

        <Grid Grid.Row="0" x:Name="AppTitleBar" Height="48" Padding="20,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                <Ellipse x:Name="StatusDot" Width="10" Height="10" Fill="#333333"/>
                <TextBlock Text="AirPoint Server" FontWeight="Bold" FontSize="14" Foreground="White"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Padding="30,10,30,30">
            <StackPanel VerticalAlignment="Center" Spacing="40" MaxWidth="500">

                <StackPanel Spacing="5">
                    <TextBlock Text="Ready to Connect" FontSize="32" FontWeight="Bold" Foreground="White" TextAlignment="Center"/>
                    <TextBlock Text="Scan the QR code with your mobile app" FontSize="14" Foreground="#888888" TextAlignment="Center"/>
                </StackPanel>

                <Border Background="#1E1E1E" CornerRadius="24" Padding="30" BorderBrush="#333333" BorderThickness="1" HorizontalAlignment="Center">
                    <StackPanel Spacing="20">

                        <Border BorderBrush="#333333" BorderThickness="3" CornerRadius="4" Background="White" Padding="10" HorizontalAlignment="Center">
                            <Image x:Name="QrImage" Width="250" Height="250" Stretch="Uniform" Tapped="QrImage_Tapped" IsHitTestVisible="True"/>
                        </Border>

                        <StackPanel Spacing="5">
                            <Border Background="#121212" CornerRadius="8" Padding="10,6" HorizontalAlignment="Center">
                                <TextBlock x:Name="IpAddressText" Text="Loading IP..." FontSize="14" Foreground="#00E676" FontWeight="SemiBold" FontFamily="Consolas"/>
                            </Border>
                            <TextBlock x:Name="StatusText" Text="Initializing..." FontSize="12" Foreground="#666666" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Padding="25" Background="#05FFFFFF">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5" Opacity="0.6">
                <TextBlock Text="Powered by" FontSize="12" Foreground="#888"/>
                <TextBlock Text="CeroSoft" FontWeight="Bold" FontSize="12" Foreground="#00E676"/>
            </StackPanel>

            <Button HorizontalAlignment="Right" VerticalAlignment="Center" Background="Transparent" BorderThickness="0" Click="OnSettingsClick" Padding="10">
                <FontIcon Glyph="&#xE713;" Foreground="White" FontSize="16"/>
            </Button>
        </Grid>
    </Grid>
</Window>